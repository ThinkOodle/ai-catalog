{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Servers Catalog",
  "description": "Schema for the agency MCP servers catalog",
  "type": "object",
  "required": ["version", "lastUpdated", "servers"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "description": "Catalog schema version"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "servers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/mcpServer"
      }
    }
  },
  "definitions": {
    "mcpServer": {
      "type": "object",
      "required": ["id", "name", "description", "type"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
          "description": "Unique identifier"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64,
          "description": "Display name"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 300,
          "description": "Brief description"
        },
        "type": {
          "type": "string",
          "enum": ["remote", "local"],
          "description": "Server type"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Remote server URL (required if type is remote)"
        },
        "command": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Command to start local server (required if type is local)"
        },
        "category": {
          "type": "string",
          "description": "Grouping category"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Searchable tags"
        },
        "requiresAuth": {
          "type": "boolean",
          "description": "Whether authentication is required"
        },
        "authType": {
          "type": "string",
          "enum": ["oauth", "apiKey", "bearer"],
          "description": "Authentication method"
        },
        "authConfig": {
          "$ref": "#/definitions/authConfig"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Official website URL"
        },
        "docsUrl": {
          "type": "string",
          "format": "uri",
          "description": "Documentation URL"
        },
        "configurable": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/configurableOption"
          },
          "description": "User-configurable options"
        },
        "environment": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Default environment variables"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "remote" } }
          },
          "then": {
            "required": ["url"]
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "local" } }
          },
          "then": {
            "required": ["command"]
          }
        }
      ]
    },
    "authConfig": {
      "type": "object",
      "properties": {
        "envVar": {
          "type": "string",
          "description": "Environment variable name for API key"
        },
        "headerName": {
          "type": "string",
          "description": "HTTP header name for auth"
        },
        "instructions": {
          "type": "string",
          "description": "User-facing instructions"
        },
        "obtainUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL to obtain credentials"
        }
      }
    },
    "configurableOption": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "string[]"],
          "description": "Option data type"
        },
        "label": {
          "type": "string",
          "description": "Display label"
        },
        "description": {
          "type": "string",
          "description": "Help text"
        },
        "default": {
          "description": "Default value"
        },
        "required": {
          "type": "boolean",
          "description": "Whether the option is required"
        },
        "min": {
          "type": "number",
          "description": "Minimum value (for numbers)"
        },
        "max": {
          "type": "number",
          "description": "Maximum value (for numbers)"
        }
      }
    }
  }
}
